<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_db"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_background_Text"
    tools:context="com.apps.v0lture.v0lture_solutions.DB">

    <TextView
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@color/white"
        />

    <TextView
        android:text="A web MySQL database management tool. Built for MySQL for PHP web servers."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textColor="@color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <View style="@style/DividerDB"
        android:id="@+id/Divider"
        android:layout_above="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView" />

        <TextView
            android:text="Requirements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/info"
            android:layout_alignParentStart="true"
            android:id="@+id/textView2"
            android:textAppearance="@android:style/TextAppearance.Material.Large"
            android:textColor="@color/white"/>

                <View style="@style/DividerDB"
                    android:id="@+id/Divider2"
                    android:layout_below="@+id/textView2"
                    android:layout_alignParentStart="true"
                    android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="v0ltureDB is confirmed and tested on PHP 5.6 and 7, however the versions around those versions are expected to work.
v0ltureDB is confirmed and tested on MySQL Server 5.6.x and is expected to work with version around it."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info2"
        android:textColor="@color/white"
        android:layout_below="@+id/Divider2"
        android:layout_alignParentStart="true" />




    <TextView
        android:text="Configurations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:layout_below="@+id/info2"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@color/white"
        />

            <View style="@style/DividerDB"
                android:id="@+id/Divider4"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView4" />

    <TextView
        android:text="SERVER
The server configuration is applicable to every v0ltureDB installation that has access to the database used.
To initialize this database the authenticated server must have SELECT, CREATE, INSERT, and UPDATE permissions. Afterwards SELECT is needed to apply the installation.
LOCAL
The local configuration is applicable to the local browser. These settings are for language and application theme."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info4"
        android:textColor="@color/white"
        android:layout_below="@+id/Divider4"
        android:layout_alignParentStart="true" />


    <TextView
        android:text="Download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info4"
        android:layout_alignParentStart="true"
        android:id="@+id/textView5"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@color/white"
        />

            <View style="@style/DividerDB"
                android:id="@+id/Divider5"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info5"
        android:textColor="@color/white"
        android:layout_below="@+id/Divider5"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="For More Info Click Here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info5"
        android:layout_toEndOf="@+id/info5"
        android:textColor="@color/white"
        android:id="@+id/textView6" />
</RelativeLayout>
