<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_v_os"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/light_background_Text"
    tools:context="com.apps.v0lture.v0lture_solutions.VOS">
    <TextView
        android:text="About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textAppearance="@android:style/TextAppearance.Material.Large"
        android:textColor="@color/white"
        />

    <TextView
        android:text="Operating system by v0lture."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/info"
        android:textColor="@color/white"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true" />

    <View style="@style/DividervOS"
        android:id="@+id/Divider"
        android:layout_above="@+id/info"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:text="For More Info Click Here!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/info"
        android:textColor="@color/white"
        android:id="@+id/textView6"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
